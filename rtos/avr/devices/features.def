;---OS-FEATURES---------------------------------------------
.IFNDEF OS_FT_BOOTLOADER_ONLY
	.SET	OS_FT_BOOTLOADER_ONLY					= 0x00	;Режим для сборки только бутлоадера
.ENDIF
.IFNDEF OS_FT_DEV_MODE
	.SET	OS_FT_DEV_MODE							= 0x00	;Режим разработки. Если включен - используем бутлоадер
.ENDIF
.IFNDEF OS_FT_IR_TABLE
	.SET	OS_FT_IR_TABLE							= 0x00	;Используем таблицу прерываний
.ENDIF
.IFNDEF OS_FT_STDIN
	.SET	OS_FT_STDIN								= 0x00	;Используем ввод
.ENDIF
.IFNDEF OS_FT_STDOUT
	.SET	OS_FT_STDOUT							= 0x00	;Используем вывод
.ENDIF
.IFNDEF OS_FT_WELCOME
	.SET	OS_FT_WELCOME							= 0x00	;Выводить приветственное сообщение при инициализации ядра
.ENDIF
.IFNDEF OS_FT_HEARTBEAT
	.SET	OS_FT_HEARTBEAT							= 0x00	;Индикация работы RTOS
.ENDIF
.IFNDEF OS_FT_DIAG
	.SET	OS_FT_DIAG								= 0x00	;Логировать диагностику при инициализации ядра
.ENDIF
.IFNDEF OS_FT_TIMER
	.SET	OS_FT_TIMER								= 0x00	;Таймер системного тика
.ENDIF
.IFNDEF OS_FT_DRAM
	.SET	OS_FT_DRAM								= 0x00	;Функционал динамического выделения памяти
.ENDIF
.IFNDEF OS_FT_ETRACE
	.SET	OS_FT_ETRACE							= 0x00	;Поддержка механизма трассировки исключений
.ENDIF
.IFNDEF OS_FT_PCINT
	.SET	OS_FT_PCINT								= 0x00	;Поддержка внешних прерываний PIN Change interrupts
.ENDIF

