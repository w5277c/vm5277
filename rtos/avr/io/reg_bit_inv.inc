.IFNDEF REG_BIT_INV
;--------------------------------------------------------
REG_BIT_INV:
;--------------------------------------------------------
;Инвертируем бит регистра и возвращаем его новое значение
;IN: Z-адрес,ACCUM_L-число бита
;OUT: flag C-состояние бита(true = HI)
;--------------------------------------------------------
	PUSH_T16

	LDS TEMP_H,SREG
	CLI
	LD TEMP_L,Z
	EOR TEMP_L,ACCUM_L
	ST Z,TEMP_L
	AND TEMP_L,ACCUM_L
	STS SREG,TEMP_H
	ADD TEMP_L,C0xff

	POP_T16
	RET
.ENDIF
